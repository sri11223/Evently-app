# Server Configuration
NODE_ENV=development
PORT=3000

# Local PostgreSQL (default port - no Docker)
DATABASE_URL=postgresql://postgres:password@localhost:5432/evently_db

# Local Redis (default port - no Docker)
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=local-development-secret-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Disable some features for local development
ENABLE_WEBSOCKETS=false
ENABLE_ADVANCED_CACHING=false